<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:paddingTop="1dp"
    android:paddingBottom="1dp"
    tools:context=".MainActivity"
    android:id="@+id/action">


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="350dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:background="#eae8ff"
        android:id="@+id/frameLayout">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/editText_username"
            android:layout_gravity="center_horizontal|top"
            android:background="#ffffff"
            android:layout_marginTop="45dp"
            android:hint="Email address or phone number number"
            android:textSize="15dp"
            android:paddingTop="7dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="97dp"
            android:id="@+id/editText_password"
            android:layout_gravity="center_horizontal|top"
            android:background="#ffffff"
            android:hint="Password"
            android:paddingTop="9dp"
            android:textSize="15dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:text="Login"
            android:id="@+id/button"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:background="#242454"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:id="@+id/textView_msg"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal|top" />

        <Button
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="SignUp"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="70dp"
            android:background="#302cbd"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password?"
            android:id="@+id/textView"
            android:layout_marginBottom="25dp"
            android:layout_gravity="center_horizontal|bottom"
            android:textStyle="bold"
            android:textSize="15sp" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/frameLayout"
        android:layout_centerHorizontal="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_gravity="center"
            android:background="#ffffff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English(UK)"
                android:id="@+id/textView3"
                android:layout_gravity="left|top"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="25dp"
                android:textStyle="bold"
                android:textColor="#0C569F" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ಕನ್ನಡ"
                android:id="@+id/textView4"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="43dp"
                android:layout_marginBottom="25dp"
                android:textStyle="bold"
                android:textColor="#0C569F" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="हिन्दी"
                android:id="@+id/textView5"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="50dp"
                android:textStyle="bold"
                android:textColor="#0C569F" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ગુજરાતી"
                android:id="@+id/textView6"
                android:layout_gravity="left|bottom"
                android:layout_marginLeft="47dp"
                android:layout_marginBottom="55dp"
                android:textStyle="bold"
                android:textColor="#0C569F" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="മലയാളം"
                android:id="@+id/textView7"
                android:layout_gravity="right|top"
                android:layout_marginTop="25dp"
                android:layout_marginRight="40dp"
                android:textStyle="bold"
                android:textColor="#0C569F" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ಕನ್ನಡ"
                android:id="@+id/textView8"
                android:layout_gravity="right|center_vertical"
                android:layout_marginBottom="27dp"
                android:layout_marginRight="47dp"
                android:textStyle="bold"
                android:textColor="#0C569F" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="தமிழ்"
                android:id="@+id/textView9"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="50dp"
                android:textStyle="bold"
                android:textColor="#0C569F" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More languages.."
                android:id="@+id/textView10"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="55dp"
                android:layout_marginRight="40dp"
                android:textStyle="bold"
                android:textColor="#0C569F" />


        </FrameLayout>
    </FrameLayout>
</RelativeLayout>
